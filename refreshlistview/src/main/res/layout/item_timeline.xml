<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="#FFF">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="30dp">

        <LinearLayout
            android:id="@+id/ll_month"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                android:layout_width="5dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/shape_bg_line_down"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_bg_circle"
                    android:padding="8dp"
                    android:text="9月"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="2016"/>
            </LinearLayout>

            <View
                android:layout_width="5dp"
                android:layout_height="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/shape_bg_line_up"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <View
                android:id="@+id/view"
                android:layout_width="5dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textView"
                android:layout_marginLeft="10dp"
                android:background="@drawable/shape_bg_line_down"/>

            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/shape_bg_circle"
                android:padding="8dp"
                android:text="11日"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="50dp"
                android:layout_marginStart="10dp"
                android:layout_toRightOf="@+id/textView"
                android:background="@drawable/shape_bg_meeting_title"
                android:padding="5dp"
                android:text="呵呵呵呵我还复合物佛为范围还佛为范围还佛为范围还佛为范围还佛为范围还未发货"/>


            <View
                android:layout_width="5dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/view"
                android:layout_alignStart="@+id/view"
                android:layout_below="@+id/textView"
                android:background="@drawable/shape_bg_line_up"/>

        </RelativeLayout>
    </LinearLayout>
</FrameLayout>